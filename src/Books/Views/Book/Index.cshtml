@model IEnumerable<Books.Models.Book>
@{
    ViewBag.Title = "Books";
}

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm"><span><i class="fa fa-plus"></i></span> Create New Book</a>
</p>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.LastName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookID"><i class="fa fa-pencil"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.BookID"><i class="fa fa-trash"></i></a> |
                <a asp-action="Details" asp-route-id="@item.BookID"><i class="fa fa-info"></i></a>
            </td>
        </tr>
    }
</table>

