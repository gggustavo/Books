@model Books.Models.Book

@{
    ViewBag.Title = "Confirm Delete";
}

<h3>Are you sure you want to delete this?</h3>

@if (ViewBag.Retry)
{
    <p class="alert-danger">Error deleting. Retry?</p>
}

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>
    </dl>


    <form asp-controller="Book" asp-action="Delete" method="post">
        <button type="submit" class="btn btn-success btn-sm"><span><i class="fa fa-check-circle-o"></i> Delete</span></button>
        <a class="btn btn-danger btn-sm" asp-action="Index"><i class="fa fa-ban"></i> Cancel</a>
    </form>

       
  
</div>